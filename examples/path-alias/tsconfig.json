{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES2022",

        "esModuleInterop": true,
        "moduleResolution": "node",
        "importsNotUsedAsValues": "error",

        "outDir": "./dist",
        "rootDir": ".",
        "sourceMap": true,

        "strict": true,
        "baseUrl": ".",
        "paths": {
            "@tool/*": ["./src/tool/*"]
        }
    },
    "exclude": [
        "./dist",
        "./node_modules/**"
    ]
}