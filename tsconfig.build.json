        "target": "es2020",
        "module": "CommonJS",
        "composite": true,
  
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
  
        "incremental": true,
        "sourceMap": true,
        "declaration": true,
  
        "strict": true,
        "moduleResolution": "node",
        "esModuleInterop": true,

        "baseUrl": ".",
        "paths": {
            "@bleed-believer/commander": ["./packages/commander"],
            "@bleed-believer/meta": ["./packages/meta"],

            "test/commander": [ "./tests/commander" ]
        }
    }
}